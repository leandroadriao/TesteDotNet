@model TesteDotNetXP.MVC.Models.Item

@{
    ViewBag.Title = "Editar";
    List<SelectListItem> MySelectList = new List<SelectListItem>();
    MySelectList.Add(new SelectListItem() { Text = "Item 1", Value = "Item 1" });
    MySelectList.Add(new SelectListItem() { Text = "Item 2", Value = "Item 2" });
    MySelectList.Add(new SelectListItem() { Text = "Item 3", Value = "Item 3" });
    MySelectList.Add(new SelectListItem() { Text = "Item 4", Value = "Item 4" });
}


<h3 class="page-header">Edição do Item</h3>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Codigo)
    @Html.HiddenFor(model => model.Data)
    <div class="row">
       
        <div class="form-group col-md-8">
            <label for="campo1">Nome:</label>
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-8">
            <label for="campo2">Descrição:</label>
            @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-6">
            <label>Categoria:</label>
            @Html.DropDownListFor(model => model.Categoria, MySelectList, "", new { @class = "form-control" })
            
        </div>
       
    </div>
    <hr />
    <div id="actions" class="row">
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary">Salvar</button>
            @Html.ActionLink("Cancelar", "Index", "Home", null, new { @class = "btn btn-default" })
        </div>
    </div>

}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
