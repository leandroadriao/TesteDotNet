@model TesteDotNetXP.MVC.Models.Item
@{
    ViewBag.Title = "Cadastro";
}

<h3 class="page-header">Adicionar Item</h3>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Data)

    if (ViewBag.Message == true)
    {
        <p>Caso não tenha notado, <a href="javascript:void(0);" id="aShowMessage">clique aqui</a> para que a mensagem seja exibida novamente.</p>
    }
    <div class="row">
        <div class="form-group col-md-8">
            <label>Nome:</label>
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-8">
            <label>Descrição:</label>
            @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-6">
            <label>Categoria:</label>
            <select class="form-control" id="Categoria" name="Categoria">
                <option>Item 1</option>
                <option>Item 2</option>
                <option>Item 3</option>
                <option>Item 4</option>
            </select>
        </div>
    </div>

<hr />
<div id="actions" class="row">
    <div class="col-md-12">
        <button type="submit" class="btn btn-primary">Salvar</button>
        @Html.ActionLink("Cancelar", "Index", "Home", null, new { @class = "btn btn-default" })
    </div>
</div>

}
